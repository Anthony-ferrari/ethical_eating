<%- include("../partials/header") %>
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Log In</h3>
			</div>
			<div class="card-body">
                <!-- needs action -->
                <div class="d-flex justify-content-center links mb-3">
                    <button class="btn btn-outline-info login_btn mr-3" role="button" aria-disabled="true">Log In As a Guest</button>
                    <button class="btn btn-outline-info login_btn ml-2" role="button" aria-disabled="true">Info</button>
                </div>
				<form>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username">
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="password">
					</div>
					<div class="form-group d-flex justify-content-center">
						<button class="btn btn-outline-info float-right login_btn" role="button" aria-disabled="true">Log In</button>
					</div>
				</form>
            </div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Don't have an account?<a href="signUp"> Sign up here</a>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>