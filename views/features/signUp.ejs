<%- include("../partials/header") %>
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Sign Up</h3>
			</div>
			<div class="card-body">
				<form action="/signUp" method="POST">
					<div>
						<p><strong>Username Requirements:</strong></p>
						<p><span>*Username has to be minimum 8 characters in length, only alphanumeric characters (e.g A-Z,a-z,0-9)*</span></p>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" name = "username" class="form-control signUpUsername" placeholder="username" required pattern="[a-zA-Z0-9]+" minlength="8">		
					</div>
					<div>
						<p><strong>Password Requirements:</strong></p>
						<p><span>*Username has to be minimum 8 characters in length, only alphanumeric characters (e.g A-Z,a-z,0-9)*</span></p>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" name = "password" class="form-control signUpPassword" placeholder="password" required pattern="[a-zA-Z0-9]+" minlength="8">
					</div>
					<div class="form-group d-flex justify-content-center">
						<button class="btn btn-outline-info float-right login_btn" name="submit" role="button" aria-disabled="true">Sign Up</button>
					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Already have an account?<a href="login"> Log in here</a>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>